include ../Makefile.in

#=====================================================================#
# Object Files
#=====================================================================#

include OBJECTS

#=====================================================================#
# Library
#=====================================================================#

default: $(objects) 
	ar rvs libcoarrays.a $(objects)
	@echo "----------- libcoarrays.a created -----------"

install:
	mv *.o ../lib
	mv *.a ../lib
	mv *.mod ../lib

clean:
	@rm -f *.o *.mod *.so *.a

#=====================================================================#
# Rule
#=====================================================================#

.SUFFIXES: .f90 .o
.PHONY: all clean 

%.o: %.f90
	$(F90) $(F90FLAGS) -c $<
